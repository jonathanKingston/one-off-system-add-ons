{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.0",
  "default_locale": "en_US",

  "applications": {
    "gecko": {
      "id": "httpdns@test.mozilla.org"
    }
  },

  "permissions": [
    "storage",
    "notifications"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "experiment_apis": {
    "rollout": {
      "schema": "experiments/rollout/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "experiments/rollout/api.js",
        "paths": [["experiments", "rollout"]]
      }
    },
    "notifications": {
      "schema": "experiments/notifications/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "experiments/notifications/api.js",
        "paths": [["experiments", "notifications"]]
      }
    }
  }
}
